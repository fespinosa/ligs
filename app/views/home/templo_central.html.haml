    .span3.well{:style => "margin-top:15px;"}
      %ul.nav.nav-list
        %li.nav-header Sub-Menú
        %li#dateday_m.active
          %a{:href => "javascript:menu('dateday');"} Días de Reuniones
        %li#grouphouse_m
